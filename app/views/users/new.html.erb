<div class="container mt-4">
  <h3>Add A New User</h3>
  <div class="container mt-4">
    <%= simple_form_for @user do |f| %>
      <div class="row col-md-6">
        <%= f.input :name, input_html: {class: 'input'}, label: "Name:  ", label_html: {class: 'label'} %>
      </div>
      <div class="row col-md-6">
        <%= f.button :submit, label_html: {class: 'btn btn-default'}%>
      </div>
    <% end %>
  </div>
</div>